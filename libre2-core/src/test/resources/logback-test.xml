<?xml version="1.0" encoding="UTF-8"?>
<!--
  Example Logback configuration for testing libre2-core.
  This configuration is used during `mvn test`.
-->
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configure libre2-java logging levels -->
    <logger name="com.axonops.libre2" level="INFO"/>

    <!-- Root logger: WARN (reduce noise from dependencies) -->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
